@model TCK_FinalProject.Models.food

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2 class="mb-4">@Model.food_name</h2>

            <div class="row">
                <div class="col-md-6">
                    <div class="image-container">
                        <img src="@Model.image" alt="@Model.food_name" class="img-fluid rounded zoom-image" />
                    </div>
                </div>

                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.price)
                        </dt>
                        <dd>
                            @string.Format("{0:N0}", Model.price)<span> VND</span>
                        </dd>
                        
                        <dt>
                            @Html.DisplayNameFor(model => model.update_date)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.update_date)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.quantity_instock)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.quantity_instock)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.info)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.info)
                        </dd>
                    </dl>

                    <p>
                        <a href="@Url.Action("AddCart", "Cart", new { id = Model.food_id, strURL = Request.Url.ToString() })" class="btn btn-success btn-lg">Order Now</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow">
                <div class="card-body">
                    <div class="description-section">
                        <p class="card-text text-muted">Indulge in the exquisite taste of this dish. Place your order now and experience culinary delight!</p>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

<p class="text-center mt-4">
    @Html.ActionLink("Back to List", "Index", new { id = "" }, new { @class = "btn btn-info" })
</p>

<style>
    .image-container {
        overflow: hidden;
        position: relative;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .zoom-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

        .zoom-image:hover {
            transform: scale(1.1);
        }

    .dl-horizontal dt {
        text-align: left;
        width: 150px;
    }

    .dl-horizontal dd {
        margin-left: 170px;
    }

    .card {
        margin-top: 20px;
    }

    .shadow {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .description-section {
        background-color: #f5f5f5; /* Choose your desired background color */
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

</style>
